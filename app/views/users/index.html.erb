<h1>Users#index</h1>
<p>Find me in app/views/users/index.html.erb</p>
<% @users.each do |user| %>
  <% for followship in current_user.followships %>
    <%# don't show current_user's own username %>
    <% if current_user.id != user.id %>
    <p><%= link_to user.username, user_path(user.id) %> 
          <%# don't allow follow if already following %>
          <% if followship.following.id != user.id %>
          <%= link_to "Follow", followships_path(:following_id => user), :method => :post %>
          <% end %></p>
       <% end %>
    <% end %>
<% end %>